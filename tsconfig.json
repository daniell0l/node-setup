{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["es6"],                                       
    "module": "commonjs",
    "allowJs": true,                         
    "rootDir": "./src",    
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],       
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                  
    "resolveJsonModule": true,
    "outDir": "./dist",                                  
    "removeComments": true,                           
    "esModuleInterop": true,           
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@modules/*": ["./src/models/*"],
      "@views/*": ["./src/views/*"],
      "@config/*": ["./src/config/*"]
    }   
  }
}
